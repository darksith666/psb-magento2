<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="PsbGatewayFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Paysbuy\PsbGateway\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Paysbuy\PsbGateway\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">PsbGatewayValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">PsbGatewayCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="PsbGatewayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Paysbuy\PsbGateway\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with PsbGatewayConfig -->
    <virtualType name="PsbGatewayLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">PsbGatewayConfig</argument>
        </arguments>
    </virtualType>

    <type name="Paysbuy\PsbGateway\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">PsbGatewayLogger</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="PsbGatewayCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">PsbGatewayAuthorizeCommand</item>
                <item name="capture" xsi:type="string">PsbGatewayCaptureCommand</item>
                <item name="void" xsi:type="string">PsbGatewayVoidCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="PsbGatewayAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PsbGatewayAuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">PsbGatewayResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">Paysbuy\PsbGateway\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Paysbuy\PsbGateway\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="PsbGatewayAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Paysbuy\PsbGateway\Gateway\Request\AuthorizationRequest</item>
                <item name="mockData" xsi:type="string">Paysbuy\PsbGateway\Gateway\Request\MockDataRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Paysbuy\PsbGateway\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">PsbGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="PsbGatewayCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Paysbuy\PsbGateway\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">Paysbuy\PsbGateway\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Paysbuy\PsbGateway\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Paysbuy\PsbGateway\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Paysbuy\PsbGateway\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <type name="Paysbuy\PsbGateway\Gateway\Request\CaptureRequest">
        <arguments>
            <argument name="config" xsi:type="object">PsbGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Void command -->
    <virtualType name="PsbGatewayVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Paysbuy\PsbGateway\Gateway\Request\VoidRequest</argument>
            <argument name="handler" xsi:type="object">Paysbuy\PsbGateway\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Paysbuy\PsbGateway\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Paysbuy\PsbGateway\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Paysbuy\PsbGateway\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Void Request -->
    <type name="Paysbuy\PsbGateway\Gateway\Request\VoidRequest">
        <arguments>
            <argument name="config" xsi:type="object">PsbGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Response handlers -->
    <virtualType name="PsbGatewayResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">Paysbuy\PsbGateway\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">Paysbuy\PsbGateway\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="PsbGatewayValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PsbGatewayConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PsbGatewayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PsbGatewayConfig</argument>
        </arguments>
    </virtualType>

    <type name="Magento\PsbGateway\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">PsbGatewayConfig</argument>
        </arguments>
    </type>

</config>
